                          "type": "QVBoxLayout",
                          "components": [
                            {
                              "name": "processing_status",
                              "type": "StatusDisplay",
                              "text": "Processing Status"
                            },
                            {
                              "name": "capture_status",
                              "type": "StatusDisplay", 
                              "text": "Capture Status"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              },
