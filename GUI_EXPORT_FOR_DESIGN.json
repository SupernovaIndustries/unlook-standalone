    "custom_widgets": {
      "TouchButton": {
        "description": "Custom button optimized for touch interfaces",
        "properties": {
          "minimum_size": "48x48px",
          "border_radius": "8px",
          "font": "Inter Bold",
          "touch_feedback": "visual highlighting",
          "types": {
            "primary": {
              "background": "#00E5CC",
              "text_color": "#000000"
            },
            "secondary": {
              "background": "#00B8A3", 
              "text_color": "#FFFFFF"
            },
            "success": {
              "background": "#4CAF50",
              "text_color": "#FFFFFF"
            },
            "warning": {
              "background": "#FF9800",
              "text_color": "#000000"
            },
            "error": {
              "background": "#F44336",
              "text_color": "#FFFFFF"
            }
          }
        }
      },
      "StatusDisplay": {
        "description": "Status indicator with colored background and pulsing animation",
        "properties": {
          "height": "32px",
          "border_radius": "16px",
          "font": "Inter 12px",
          "padding": "8px 16px",
          "animation": "pulsing for processing states",
          "types": {
            "success": {
              "background": "#4CAF50",
              "text_color": "#FFFFFF"
            },
            "warning": {
              "background": "#FF9800", 
              "text_color": "#000000"
            },
            "error": {
              "background": "#F44336",
              "text_color": "#FFFFFF"
            },
            "info": {
              "background": "#2196F3",
              "text_color": "#FFFFFF"
            },
            "processing": {
              "background": "#FF6B35",
              "text_color": "#FFFFFF",
              "animation": "pulsing"
            }
          }
        }
      },
      "ParameterSlider": {
        "description": "Labeled slider for parameter adjustment",
        "properties": {
          "label_font": "Inter 12px",
          "value_display": "real-time",
          "slider_color": "#00E5CC",
          "background": "#1A2B2A",
          "height": "60px"
        }
      }
    },
    "design_notes": {
      "layout_principles": [
        "Responsive design for 840x480 to 1920x1080",
        "Touch-first interface with 48px minimum targets",
        "Grid-based layout with consistent spacing",
        "Dark theme optimized for industrial environments"
      ],
      "color_usage": [
        "Primary (#00E5CC) for main actions and highlights",
        "Secondary (#00B8A3) for secondary actions", 
        "Warning/Error colors for status indication",
        "Dark background (#000000) with surface (#1A2B2A) for panels"
      ],
      "typography": [
        "Inter font family for consistency",
        "Bold for headings and button labels",
        "Regular for body text and status",
        "Responsive font sizing based on screen size"
      ],
      "current_issues_to_fix": [
        "Text too small on some screens - needs font scaling",
