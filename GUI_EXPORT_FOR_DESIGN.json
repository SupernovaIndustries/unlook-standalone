                                  },
                                  {
                                    "name": "calibration_button",
                                    "type": "TouchButton",
                                    "text": "CALIBRATION", 
                                    "style": "secondary",
                                    "size": "main button",
                                    "position": "row 0, col 1"
                                  },
                                  {
                                    "name": "advanced_button",
                                    "type": "TouchButton",
                                    "text": "ADVANCED",
                                    "style": "secondary",
                                    "size": "main button",
                                    "position": "row 1, col 0"
                                  },
                                  {
                                    "name": "reset_button",
                                    "type": "TouchButton",
                                    "text": "RESET",
                                    "style": "warning",
                                    "size": "main button",
                                    "position": "row 1, col 1"
                                  },
                                  {
                                    "name": "about_button",
                                    "type": "TouchButton",
                                    "text": "ABOUT UNLOOK SCANNER",
                                    "style": "success",
                                    "size": "spans 2 columns",
